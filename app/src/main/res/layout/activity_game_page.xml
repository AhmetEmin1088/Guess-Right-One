<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePageActivity">

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : 60"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" >

    </TextView>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161" >

    </TextView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/altiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="1.5dp"
            android:src="@drawable/alti"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/besView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="1.5dp"
            android:src="@drawable/bes"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/dortView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="1.5dp"
            android:src="@drawable/dort"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/ucView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="1.5dp"
            android:src="@drawable/uc"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/ikiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1.5dp"
            android:src="@drawable/iki"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/birView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1.5dp"
            android:src="@drawable/bir"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/altiIkiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="1.5dp"
            android:src="@drawable/alti"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/besIkiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="1.5dp"
            android:src="@drawable/bes"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/dortIkiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="1.5dp"
            android:src="@drawable/dort"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/ucIkiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="1.5dp"
            android:src="@drawable/uc"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/ikiIkiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="1.5dp"
            android:src="@drawable/iki"
            android:clickable="true"
            >

        </ImageView>

        <ImageView
            android:id="@+id/birIkiView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="1.5dp"
            android:src="@drawable/bir"
            android:clickable="true"
            >

        </ImageView>

    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>